<div class="fullheight">
  <form action="/" method="post">
    <div class="d-flex">
      <label for="persoana" class="pentru">Pentru: </label>
      <input
        type="text"
        name="persoana"
        id="persoana"
        value="<%= persoana %>"
        placeholder="Numele persoanei"
      />
    </div>

    <div class="form-group relative">
      <img src="https://freesvg.org/img/heart-15.png" class="heart heart-1" />
      <img src="https://freesvg.org/img/heart-15.png" class="heart heart-2" />
      <img src="https://freesvg.org/img/heart-15.png" class="heart heart-3" />
      <textarea
        name="text"
        id="text"
        cols="30"
        rows="20"
        id="text"
        placeholder="Scrie aici mesajul tau"
      >
<%= mesaj %></textarea
      >
      <span><%= error %></span>
    </div>
    <button>Trimite</button>
  </form>
</div>
